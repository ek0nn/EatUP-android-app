<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/darkModeBtn</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- DARK MODE -->
    <!-- BG IF DARK MODE ON -->

    <style name="SCREEN">
        <item  name="android:background">#0f0f0f</item>
    </style>
    <!-- TXT BG IF dark MODE ON -->
    <style name="TEXT">
        <item  name="android:textColor">#6200EE</item>
    </style>
    <style name="BUTTON" >
        <item name="backgroundTint">@color/darkModeBtn</item>
        <item  name="android:textColor">#FFFFFF</item>
    </style>
    <style name="cardC">
