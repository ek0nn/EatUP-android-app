<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryVariant
        </item>
        <!-- Customize your theme here. -->
    </style>


    <!-- ACTION BAR -->
    <style name="ActionBar" parent="Theme.Material3.Light">
        <item name="colorPrimary">#00042b</item>
        <item name="cardBackgroundColor">#15218E</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">8dp</item>
        <item  name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="ReviewTheme" parent="Theme.Material3.DayNight"></style>

    <!-- LIGHT MODE -->
    <!-- BG IF LIGHT MODE ON -->

    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>
    <!-- TXT BG IF LIGHT MODE ON -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <style name="SCREEN2btn">
        <item name="android:background">@color/purple_700</item>
    </style>

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        ...
        <item name="materialCardViewStyle">@style/MyDesignCardView</item>
    </style>

    <style name="MyDesignCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#15218E</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">8dp</item>
        <item  name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif</item>

    </style>
</resources>